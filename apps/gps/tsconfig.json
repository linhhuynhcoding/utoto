{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@utoto/shared": ["../../packages/shared/src"],
      "@utoto/shared/*": ["../../packages/shared/src/*"]
    }
  },
  "include": ["src/**/*"],
  "ts-node": {
    "files": true,
    "require": ["tsconfig-paths/register"]
  }
}
