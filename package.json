{
  "name": "utoto-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently -n \"API,WORKER,WEB\" -c \"blue,magenta,green\" \"pnpm --filter backend dev:api\" \"pnpm --filter backend dev:worker\" \"pnpm --filter frontend dev\"",
    "dev:backend": "pnpm --filter backend dev:api",
    "dev:frontend": "pnpm --filter frontend dev",
    "db:up": "docker-compose -f infra/docker-compose.yml up -d",
    "db:down": "docker-compose -f infra/docker-compose.yml down"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18"
  }
}
